{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PVCMonitorCloudWatchMetrics",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:PutMetricData"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "cloudwatch:namespace": "LangfusePVC"
        }
      }
    }
  ]
}
